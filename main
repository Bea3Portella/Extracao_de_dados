list = list()
while True:
    value = list.append(int(input('Digite um valor: ')))
    do_you_continue = str(input('Quer continuar? [S/N] ')).upper().strip()[0]
    if do_you_continue in 'Nn':
        break
print(f'Você digitou {len(list)} elementos')
list.sort(reverse=True)
print(f'Os valores em ordem decrescente são {list}')
if 5 in list:
    print('O valor 5 faz parte da lista!')
else:
    print('O valor 5 não faz  parte da lista')
    